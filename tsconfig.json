{
	"compilerOptions": {
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"resolveJsonModule": true,
		"lib": ["es2019", "dom"]
	},
	"include": ["./src/**/*.ts", "./src/**/*.d.ts"],
	"exclude": ["./**/*.test.ts", "node_modules", "./dist/**.ts"]
}
